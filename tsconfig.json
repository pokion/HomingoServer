{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ],
    "skipLibCheck": true,
    "strictNullChecks": true
  }
}